<Application x:Class="ReefCams.Viewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#11161D"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#1A2230"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3AA0F5"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E7EEF7"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#9BB0C8"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#2F5D8F"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#2A4E77"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="#FFFFFF"/>
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#263347" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="#3B4E69" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="4" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#202C3D" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="#3B4E69" />
            <Setter Property="Padding" Value="6,4" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#F1F5FB" />
            <Setter Property="Foreground" Value="#0F1726" />
            <Setter Property="TextElement.Foreground" Value="#0F1726" />
            <Setter Property="BorderBrush" Value="#3B4E69" />
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#F1F5FB" />
            <Setter Property="Foreground" Value="#0F1726" />
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#3F6EA2" />
                    <Setter Property="Foreground" Value="#FFFFFF" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2F5D8F" />
                    <Setter Property="Foreground" Value="#FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TreeView">
            <Setter Property="Background" Value="#1A2230" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="#3B4E69" />
        </Style>
        <Style TargetType="TreeViewItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3B5F8A" />
                    <Setter Property="Foreground" Value="#FFFFFF" />
                </Trigger>
                <Trigger Property="IsSelectionActive" Value="False">
                    <Setter Property="Background" Value="#2F4D72" />
                    <Setter Property="Foreground" Value="#FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#151E2A" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="#2A3A50" />
            <Setter Property="RowBackground" Value="#1A2230" />
            <Setter Property="AlternatingRowBackground" Value="#202A3A" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
        </Style>
    </Application.Resources>
</Application>
